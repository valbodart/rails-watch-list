<div class="container">
<h1>My watchlists</h1>

  <div class="row mt-5">

    <% @lists.each do |list| %>
      <div class="col-4">
        <div class="card-category">
          <div class="top-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
            <h4><%= list.name %></h4>
            <%= link_to "+", list_path(list), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
          </div>
              <% list.movies.each do |movie| %>
                <div class="card-movies">
                  <img src="<%=movie.poster_url%>"/>
                  <div class="card-movies-infos">
                    <div class='card-movies-top'>
                      <p><%= movie.title %></p>
                      <p><%= "#{movie.rating} ⭐️" %></p>
                    </div>
                    <div class="card-movies-overview">
                      <%= movie.overview %>
                    </div>
                  </div>
                </div>
                <br>
              <% end %>


            <%= link_to 'Add a movie', new_list_bookmark_path(list) %>
        </div>
      </div>
    <% end %>
  </div>
